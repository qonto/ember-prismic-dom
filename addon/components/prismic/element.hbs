{{~#if (eq @node.type "image")~}}
  <Prismic::Image @node={{@node}} />
{{~else if (eq @node.type "span")~}}
  <Prismic::Children @node={{@node}} @onUnknownTag={{@onUnknownTag}}>
    <:hyperlink as |node|>{{~yield node to='hyperlink'~}}</:hyperlink>
  </Prismic::Children>
{{~else if (eq @node.type "hyperlink")~}}
  {{~yield @node to="hyperlink"~}}
{{~else~}}
  {{~#let (element this.tagName) as |Tag|~}}
    <Tag><Prismic::Children @node={{@node}} @onUnknownTag={{@onUnknownTag}}>
      <:hyperlink as |node|>{{~yield node to='hyperlink'~}}</:hyperlink>
    </Prismic::Children></Tag>
  {{~/let~}}
{{~/if~}}